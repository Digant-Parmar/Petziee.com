{
    "hosting": [{
            "target": "main",
            "public": "shopingweb",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "rewrites": [{
                "source": "**",
                "destination": "/index.html"
            }]
        },
        {
            "target": "dev",
            "public": "shopingweb",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "rewrites": [{
                "source": "**",
                "destination": "/index.html"
            }]
        },
        {
            "target": "backend",
            "public": "backend",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "rewrites": [{
                "source": "**",
                "destination": "/index.html"
            }]
        }
    ],
    "functions": {
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run lint"
        ],
        "source": "functions"
    }
}